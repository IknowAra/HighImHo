<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestActivity">
    <LinearLayout
        android:id="@+id/back_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/inputArea"
        android:gravity="left|center_vertical">

        <Button
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/arrow"
            android:layout_marginLeft="15dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/back_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="5X5 쌍자치환 암호의 원리를 확인하세요~!"
            android:gravity="center_horizontal"
            android:textSize="20dp"
            />
        <EditText
            android:id="@+id/pureText"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#ffffff"
            android:layout_margin="4dp"
            android:hint="평문"
            android:textColorHint="#8C8C8C"
            android:textColor="@color/black"
            android:paddingLeft="5dp"/>
        <EditText
            android:id="@+id/secretKey"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#ffffff"
            android:layout_margin="4dp"
            android:hint="암호키"
            android:textColor="@color/black"
            android:textColorHint="#8C8C8C"
            android:paddingLeft="5dp"/>
        <Button
            android:id="@+id/startBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="암호화 시작"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:padding="8dp"
            android:stretchColumns="*"
            android:orientation="vertical"
            android:weightSum="5"
            >

            <TableRow android:background="#000000"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/table1"
                    android:textColor="@color/black"
                    android:layout_margin="1dp"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/table2"
                    android:textColor="@color/black"
                    android:layout_margin="1dp"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/table3"
                    android:textColor="@color/black"
                    android:layout_margin="1dp"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/table4"
                    android:textColor="@color/black"
                    android:layout_margin="1dp"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/table5"
                    android:textColor="@color/black"
                    android:layout_margin="1dp"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                    android:gravity="center"/>
            </TableRow>
            <TableRow android:background="#000000"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/table6"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/table7"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/table8"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/table9"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/table10"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:textColor="@color/black" />
            </TableRow>
            <TableRow android:background="#000000"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/table11"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/table12"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/table13"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/table14"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/table15"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:textColor="@color/black" />
            </TableRow>
            <TableRow android:background="#000000"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/table16"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/table17"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/table18"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/table19"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/table20"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:textColor="@color/black" />
            </TableRow>
            <TableRow android:background="#000000"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/table21"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/table22"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/table23"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/table24"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/table25"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:textColor="@color/black" />
            </TableRow>
        </TableLayout>
        <TextView
            android:id="@+id/twinPureData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:textColor="@color/black"
            android:layout_margin="4dp" />
        <TextView
            android:id="@+id/cipherText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:textColor="@color/black"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/decryptionBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="복호화 시작"/>
        <TextView
            android:id="@+id/decryption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:textColor="@color/black"
            android:layout_margin="4dp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>